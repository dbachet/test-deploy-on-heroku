<div id='landing-page'>
  <form {{action "create" on="submit"}} {{bind-attr class="hasErrors"}}>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="notify-me">M'INFORMER DU LANCEMENT DE CHANGEONS</div>

        <div class="alerts">
          {{#if hasErrors}}
            <ul class="alert alert-danger" role="alert">
              {{#each error in formattedErrors}}
                <li>{{error}}</li>
              {{/each}}
            </ul>
          {{/if}}

          {{#if serverError}}
            <p class="errors alert alert-danger" role="alert">{{serverError}}</p>
          {{/if}}

          {{#if hasSucceeded}}
            <p class="success-message alert alert-success" role="alert">Vous allez recevoir un email pour confirmer votre inscription Ã  la liste d'attente.</p>
          {{/if}}
        </div>

        {{input valueBinding="email" id="email" placeholder="Entrez votre email" type="email"}}
        <button id="btn-save-mailing-list-recipient" {{action "create"}}>
          Envoyer
        </button>
      </div>
      <div class="col-md-3"></div>
    </div>
  </form>
</div>